#!/bin/bash
find . -type f -name "*.html" -exec sed -i '' 's/http:\/\/fonts.googleapis/https:\/\/fonts.googleapis/g' {} +
echo fixed fonts
find . -type f -name "*.xml" -exec sed -i '' 's/<loc>/<loc>https:\/\/exambuddy.co.uk/g' {} +
find . -type f -name "*.xml" -exec sed -i '' 's/<image:loc>/<image:loc>https:\/\/exambuddy.co.uk/g' {} +
echo fixed sitemap